<!DOCTYPE html>
<html>
  <head>
    <title>WebpackerTest</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'hello_vue', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'name_vue', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'component_vue', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container" data-behavior="vue">
      <%= yield %>
    </div>
  </body>
</html>
